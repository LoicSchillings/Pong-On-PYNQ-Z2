#ifndef GAME_H
#define GAME_H

#include "game_state.h"

/* Game commands */
typedef enum {
    CMD_NONE = 0,
    CMD_P1_UP,
    CMD_P1_DOWN,
    CMD_P2_UP,
    CMD_P2_DOWN,
    CMD_P1_READY,
    CMD_P2_READY,
    CMD_RESET
} game_cmd_t;

/* API */
void game_init(void);
void game_update(void);
void game_apply_command(game_cmd_t cmd);
void game_reset_ball(int dir);
void game_reset_full(void);

#endif
