#ifndef GAME_H
#define GAME_H

#include <stdint.h>

#define SCREEN_W 1280
#define SCREEN_H 720

#define PADDLE_W 20
#define PADDLE_H 120

#define BALL_SIZE 12

typedef struct {
    int p1_y;
    int p2_y;

    int ball_x;
    int ball_y;
    int ball_vx;
    int ball_vy;
} game_state_t;

extern game_state_t game;

void game_init(void);
void game_update(void);
void game_move_paddle(int player, int dir);

#endif
